{
  "$schema": "https://schema.railpack.com",
  "provider": "node",
  "steps": {
    "preinstall": {
      "commands": ["npm install -g pnpm"]
    },
    "install": {
      "inputs": [{ "step": "preinstall" }],
      "commands": ["pnpm install"]
    },
    "build": {
      "inputs": [{ "step": "install" }],
      "commands": ["npx turbo run build"]
    },
    "deploy": {
      "inputs": [{ "step": "build" }],
      "commands": ["node dist/index.js"]
    }
  }
}
