{
  "$schema": "https://schema.railpack.com",
  "provider": "node",
  "steps": {
    "preinstall": {
      "commands": ["npm install -g pnpm"]
    },
    "install": {
      "inputs": [{ "step": "preinstall" }],
      "commands": ["npx pnpm install"]
    },
    "build": {
      "inputs": [{ "step": "install" }],
      "commands": ["cd ../.. && npx turbo run build"]
    }
  },
  "deploy": {
    "startCommand": "node dist/index.js"
  }
}
